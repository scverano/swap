<%= form_for(product) do |f| %>
<% if product.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(product.errors.count, "error") %>
        prohibited this product from being saved:</h2>

    <ul>
        <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

  <div class="wrapper wrapper-content animated fadeInRight ecommerce" data-pg-collapsed>
      <div class="row">
          <div class="col-lg-12">
              <div class="tabs-container">
                  <ul class="nav nav-tabs">
                      <li class="active">
                          <a data-toggle="tab" href="#tab-1">
                              Info</a>
                      </li>
                      <li class="">
                          <a data-toggle="tab" href="#tab-2">
                              Images</a>
                      </li>
                  </ul>
                  <div class="tab-content">
                      <div id="tab-1" class="tab-pane active">
                          <div class="panel-body">
                              <fieldset class="form-horizontal">
                                  <div class="form-group">
                                    <label class="col-sm-2 control-label">I want to:</label>
                                    <div class="col-sm-2">
                                        <%= select_tag 'product[ad_type_id]', options_for_select(AdType.all.collect{ |ad_type| [ad_type.name, ad_type.id] }, @product.ad_type_id), :class => "form-control" %>
                                    </div>

                                    <label class="col-sm-1 control-label">Category:</label>
                                    <div class="col-sm-7">
                                      <%= select_tag 'product[category_id]', options_for_select(Category.all.collect{ |category| [category.name, category.id] } , @product.category_id), :class => "form-control" %>
                                    </div>
                                  </div>

                                  <div class="form-group">
                                      <label class="col-sm-2 control-label">Your asking price:</label>
                                      <div class="col-sm-2">
                                          <%= f.text_field :price, class: "form-control", placeholder: "eg. â‚± 800.00" %>
                                      </div>

                                      <label class="col-sm-1 control-label">Condition:</label>
                                      <div class="col-sm-2">
                                        <%= select_tag 'product[condition_id]', options_for_select(Condition.all.collect{ |condition| [condition.name, condition.id] }, @product.condition_id), :class => "form-control" %>
                                      </div>

                                      <label class="col-sm-1 control-label">Status:</label>
                                      <div class="col-sm-4">
                                        <%= select_tag 'product[status_id]', options_for_select(Status.all.collect{ |status| [status.name, status.id] }, @product.status_id), :class => "form-control" %>
                                      </div>
                                  </div>

                                  <div class="form-group">
                                      <label class="col-sm-2 control-label">What are you selling or buying?</label>
                                      <div class="col-sm-10">
                                          <%= f.text_field :name, class: "form-control", placeholder: "Product name" %>
                                      </div>
                                  </div>

                                  <div class="form-group">
                                      <label class="col-sm-2 control-label">Tell about the product:</label>
                                      <div class="col-sm-10">
                                          <%= f.text_area :description, class: "form-control summernote" %>
                                      </div>
                                  </div>

                                  <div class="form-group">
                                      <label class="col-sm-2 control-label">&nbsp;</label>
                                      <div class="col-sm-1">
                                          <%= f.submit "Save", class: "btn btn-primary btn-block" %>
                                      </div>
                                  </div>
                              </fieldset>
                          </div>
                      </div>

                      <div id="tab-2" class="tab-pane">
                          <div class="panel-body">
                              <div class="table-responsive">
                                  Images Here!
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
<% end %>

<script>
    $(document).on("turbolinks:load", function () {
        $('.summernote').summernote({
          height: 400,
          minHeight: null,
          maxHeight: null,
          toolbar: [
            // [groupName, [list of button]]
            ['style', ['bold', 'italic', 'underline', 'clear']],
            ['fontsize', ['fontsize']],
            ['para', ['ul', 'ol', 'style']],
            ['height', ['height']],
            ['insert', ['link', 'video']],
            ['misc', ['fullscreen', 'help']]
          ]
        });
    });
</script>
