<div class="passwordBox animated fadeInDown">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox-content">
                <h2 class="font-bold">Forgot password</h2>
                <p>Enter your email address and your password will be reset and emailed to you.</p>
                <br>
                <div class="row">
                    <div class="col-lg-12">
                        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: 'm-t') do |f| %>
                          <%= devise_error_messages! %>

                          <div class="form-group">
                              <%= f.email_field :email, autofocus: true, placeholder: 'Email address', class: "form-control", required: '' %>
                          </div>
                          <%= f.submit "Send new password", class: 'btn btn-primary block full-width m-b' %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
