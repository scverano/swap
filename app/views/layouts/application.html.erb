<!DOCTYPE html>
<html>
  <head>
    <title>Swap</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    <body class="<%= current_user.nil? ? "mini-navbar fixed-sidebar fixed-nav" : "fixed-sidebar fixed-nav" %>"> 
        <div id="wrapper"> 
			<%= render "layouts/sidebar" %>        
            <div id="page-wrapper" class="gray-bg"> 
                <div class="row border-bottom"> 
                    <%= render "layouts/topbar" %>              
                </div>            
                <div class="wrapper wrapper-content animated fadeInDown">
                    <div class="row">
    					<% unless current_user %>
    					  <li><%= link_to "/auth/facebook" do %><%= image_tag('facebook.png', width: '40', heigth: '40', class: 'img-circle') %><% end %></li>
    					  <li><%= link_to "/auth/twitter" do %><%= image_tag('twitter.png', width: '40', heigth: '40', class: 'img-circle') %><% end %></li>
    					<% end %>

    					<% flash.each do |key, value| %>
    						<div class="alert alert-info"><%= value %></div>
    					<% end %>

    				    <%= yield %>
                    </div>
                </div>
				<%= render "layouts/footer" %>
            </div>
        </div>
    </body>
</html>
